<%= render 'shared/page_title', title: 'all chef list' %>

<div align="center">
<% @chefs.each do |chef| %>
    <ul class='listing'>
        <div class="row">
            <div class="well col-md-4 col-md-offset-4">
                <li><%= link_to gravatar_for(chef), chef_path(chef) %></li>
                <li class="chef-title"><%= chef.name.capitalize %></li>
                <li><small><%= pluralize(chef.recipes.count, 'recipe') if chef.recipes %></small></li>
            </div>
        </div>
    </ul>
<% end %>
</div>